                        'filter' => $categoryList
                    ),

                    array(
                        'column' => 'published',
                        'type' => 'select',
                        'filter' => true,
                        'value' => function($row){
                            return Element::checkbox(sprintf('published[%s]', $row['id']), $row['published']);
                        },
                        'filter' => $this->translateArray([
                            '0' => 'No',
                            '1' => 'Yes',
                        ])
                    ),

                    array(
                        'column' => 'seo',
                        'label' => 'SEO',
                        'filter' => true,
                        'type' => 'select',
                        'value' => function($row){
                            return Element::checkbox(sprintf('seo[%s]', $row['id']), $row['seo']);
                        },
                        'filter' => $this->translateArray([
                            '0' => 'No',
                            '1' => 'Yes'
                        ])
                    ),

                    array(
                        'column' => 'front',
                        'type' => 'select',
                        'value' => function($row){
                            return Element::checkbox(sprintf('front[%s]', $row['id']), $row['front']);
